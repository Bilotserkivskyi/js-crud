<main class="main">
  <section class="form">
      <h1 class="form__title">Редагування товару</h1>
        <form method="POST" action="/product-edit?id={{id}}">
          <div class="form__card">
            {{#with data}}
              <h2 class="form__title__h2">Інформація про товар</h2>

              <div class="form__data">

                <div class="form__field">
                  <label for="name" class="form__label">Назва товару</label>
                  <input type="text" name="name" class="form__input" value="{{name}}" minlength="3" maxlength="70">
                </div> 
                <div class="form__field">
                  <label for="price" class="form__label">Ціна</label>
                  <input type="number" name="price" class="form__input" value="{{price}}" maxlength="10">
                </div> 
                <div class="form__field">
                  <label for="id" class="form__label">ID</label>
                  <input type="number" name="id" class="form__input" value="{{id}}"  readonly>
                </div>

              </div>

              <div class="form__field">
                <label for="description" class="form__label">Короткий опис товару</label>
                <input type="text" name="description" class="form__description" value="{{description}}" minlength="5" maxlength="500">
                <label for="description" class="form__text">Відображується у картці товару</label>
              </div> 
            {{/with}}
              <div class="form__button">
                <button class="form__button__save">Зберегти оновлення</button>
                <button class="form__button__delete">Видалити товар</button>
              </div>
          </div>
        </form>
  </section>
</main>