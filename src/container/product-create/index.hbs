<main class="main">
    <section>
    <div class="form">
    <div class="form__horizont">
      <h1 class="form__title">Cтворення товару</h1>
        <form method="POST" action="/product-create" class="form__card">
          <div class="form__content">
            <h2 class="form__title__h2">Інформація про товар</h2>
            <div class="form__row">
              <div class="form__field">
                <label for="name" class="form__label">Назва товару</label>
                <input type="text" name="name" class="form__input" required>
              </div>
              <div class="form__field">
                <label for="price" class="form__label">Ціна</label>
                <input type="number" name="price" class="form__input" required>
              </div>
            </div>
            <div class="form__field">
              <label for="description" class="form__label">Короткий опис товару</label>
              <textarea type="text" name="description" class="form__description" required></textarea>
              <label for="description" class="form__text">Відображується у картці товару</label>
            </div>
            <button class="form__button">Створити товар</button>
          </div>
        </form>
    </div>
    </div>
  </section>
</main>