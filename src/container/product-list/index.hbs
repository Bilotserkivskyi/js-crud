<main>
  <section>
    <div class="product">
    <h1 class="product__title">Список товарів</h1>
      <div class="product__list">
        {{#with data.products}}
          {{#if isEmpty}}
            <div class="product__empty">Список пустий</div>
            {{else}}
            
            <form method="POST" action="/product-edit?id={{id}}">
              <div class="product__content">
              
                  {{#each list}}
                  <div class="product__card">
                    <h3 class="product__name">{{name}}</h3>
                    <p class="product__description">{{description}}</p>
                    <span class="product__id">id: {{id}}</span>
                    <div class="product__horizont">
                      <span class="product__price">{{price}}₴</span>
                      <a href="/product-edit?id={{id}}" class="product__edit">Редагувати</a>
                    </div>
                  </div>
                  {{/each}}
                </div>
              </form>
            
              
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>
</main>